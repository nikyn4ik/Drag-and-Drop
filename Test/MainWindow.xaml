<Window x:Class="Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Test"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Drag and Drop" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid Grid.Row="1"  Margin="10, 20">
            <ListBox Name="LstImage" ScrollViewer.HorizontalScrollBarVisibility="Disabled" 
                     Background="White" BorderThickness="0"
                     AllowDrop="True" DragEnter="LstImg_DragEnter" 
                     DragLeave="LstImg_DragLeave" Drop="LstImg_Drop">
            </ListBox>
        </Grid>
    </Grid>
</Window>